<h1>New Article</h1>

<%= simple_form_for @article do |f| %>
  <%= f.input :title, label: "Title" %>
  <%= f.input :date, as: :date, html5: true, label: "Publish Date" %>
  <%= f.input :is_published, as: :boolean %>
  <%= f.input :content, as: :text, label:"Content" %>
  <%= f.submit "Save" %>
<% end %> 
